{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Override for build
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "example", "**/*.test.ts", "**/*.spec.ts"]
}
